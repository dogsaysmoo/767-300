<?xml version="1.0"?>



<PropertyList>
	<path>ARN-118-tacan.ac</path>

	<animation>
		<type>textranslate</type>
		<object-name>drum-3</object-name>
		<property>instrumentation/tacan/frequencies/selected-channel[3]</property>
		<factor>-0.1</factor>
		<offset>1</offset>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>unit-knob</object-name>
		<property>instrumentation/tacan/frequencies/selected-channel[3]</property>
		<interpolation>
			<entry>
				<ind>0.0</ind>
				<dep>0.0</dep>
			</entry>
			<entry>
				<ind>9.0</ind>
				<dep>-180.0</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>1.8865</x-m>
			<y-m>-0.1245</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>unit-knob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/tacan/frequencies/selected-channel</property>
				<step>1</step>
				<min>1</min>
				<max>126</max>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/tacan/frequencies/selected-channel</property>
				<step>-1</step>
				<min>1</min>
				<max>126</max>
			</binding>
		</action>
</animation>

	<animation>
		<type>textranslate</type>
		<object-name>drum-2</object-name>
		<property>instrumentation/tacan/frequencies/selected-channel[2]</property>
		<factor>-0.1</factor>
		<offset>1</offset>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>drum-1</object-name>
		<property>instrumentation/tacan/frequencies/selected-channel[1]</property>
		<factor>-0.1</factor>
		<offset>1</offset>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>tenth-knob</object-name>
		<property>instrumentation/tacan/frequencies/selected-channel[2]</property>
		<interpolation>
			<entry>
				<ind>0.0</ind>
				<dep>0.0</dep>
			</entry>
			<entry>
				<ind>9.0</ind>
				<dep>-324.0</dep>
			</entry>
	        </interpolation>
		<center>
			<x-m>1.8865</x-m>
			<y-m>-0.1765</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>tenth-knob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/tacan/frequencies/selected-channel</property>
				<step>10</step>
				<min>1</min>
				<max>126</max>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/tacan/frequencies/selected-channel</property>
				<step>-10</step>
				<min>1</min>
				<max>126</max>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Y-sign</object-name>
		<condition>
			<equals>
				<property>instrumentation/tacan/frequencies/selected-channel[4]</property>
				<value>Y</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>X-sign</object-name>
		<condition>
			<equals>
				<property>instrumentation/tacan/frequencies/selected-channel[4]</property>
				<value>X</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>xy-knob</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>property-cycle</command>
				<property>instrumentation/tacan/frequencies/selected-channel[4]</property>
				<value type="string">X</value>
				<value type="string">Y</value>
		        </binding>
		</action>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>select-knob</object-name>
		<property>instrumentation/tacan/powered</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>30.0</dep>
			</entry>
			<entry>
				<ind>1</ind>
				<dep>0.0</dep>
			</entry>
	        </interpolation>
		<center>
			<x-m>1.8865</x-m>
			<y-m>-0.094</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>select-knob</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/tacan/powered</property>
			</binding>
		</action>
	</animation>


	<!-- lighting -->
	<animation>
		<type>material</type>
		<object-name>mount</object-name>
		<object-name>vol-knob</object-name>
		<object-name>test-button</object-name>
		<object-name>test-lamp</object-name>
		<object-name>drum-1</object-name>
		<object-name>drum-2</object-name>
		<object-name>drum-3</object-name>
		<object-name>X-sign</object-name>
		<object-name>Y-sign</object-name>
		<condition>
        	    <not>
            		<property>sim/rendering/rembrandt/enabled</property>
        	    </not>
      		</condition>
      		<emission>
		    <red>0.4</red>
		    <green>0.4</green>
		    <blue>0.4</blue>
		    <factor-prop>sim/multiplay/generic/float[3]</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>xy-knob</object-name>
		<object-name>select-knob</object-name>
		<object-name>unit-knob</object-name>
		<object-name>tenth-knob</object-name>
		<condition>
        	    <not>
            		<property>sim/rendering/rembrandt/enabled</property>
        	    </not>
      		</condition>
      		<emission>
		    <red>0.2</red>
		    <green>0.2</green>
		    <blue>0.2</blue>
		    <factor-prop>sim/multiplay/generic/float[3]</factor-prop>
		</emission>
	</animation>

</PropertyList>
